{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@page*": ["./apps/web/src/app/page*"],
      "@presentation*": ["./apps/web/src/app/components/presentation*"],
      "@container*": ["./apps/web/src/app/components/container*"],
      "@service*": ["./apps/web/src/app/service*"],
      "@usecase*": ["./apps/web/src/app/usecase*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
